.row
  .span3.sidebar-menu
    = haml :sidebar, :layout => false

  .span9
    .pull-right.breadcrumbs
      - display_breadcrumbs

    ~ @page.to_html(self)

    = disclaimer

    %section.pages
      = haml :summaries, :layout => false, :locals => { :pages => @page.pages }

    - unless @page.articles.empty?
      %section.articles
        = haml :summaries, :layout => false, :locals => { :pages => @page.articles, :header => :h3 }

- if @page.metadata('updated')
  - begin
    - datetime = DateTime.parse(@page.metadata('updated')).strftime("%Y-%m-%d")
  - rescue ArgumentError
    - datetime = false
  - if datetime
    %p.pull-right.muted{:style => "margin-top: 20px"}
      Last updated on
      = datetime
