.row
  .span3.sidebar-menu
    .nav-header
      Redding Ultimate
    - display_menu(Nesta::Menu.for_path('/pickup'), :class => 'nav nav-list')
    - display_menu(Nesta::Menu.for_path('/leagues'), :class => 'nav nav-list')
    - display_menu(Nesta::Menu.for_path('/tournaments'), :class => 'nav nav-list')
    - display_menu(Nesta::Menu.for_path('/red-hots'), :class => 'nav nav-list')

    .nav-header More info
    - display_menu(Nesta::Menu.for_path('/ten-simple-rules'), :class => 'nav nav-list')

    .nav-header Social media
    %ul.nav.nav-list
      %li
        %a{:href => "https://www.facebook.com/groups/ReddingUltimateAssociation/", :target => "_blank"}
          %i.icon-facebook
          Facebook
      %li
        %a{:href => "/articles.xml", :target => "_blank"}
          %i.icon-rss
          RSS

  .span9
    .pull-right.breadcrumbs
      - display_breadcrumbs

    ~ @page.to_html(self)

    = disclaimer

    %section.pages
      = haml :summaries, :layout => false, :locals => { :pages => @page.pages }

    - unless @page.articles.empty?
      %section.articles
        = haml :summaries, :layout => false, :locals => { :pages => @page.articles, :header => :h3 }

- if @page.metadata('updated')
  - begin
    - datetime = DateTime.parse(@page.metadata('updated')).strftime("%Y-%m-%d")
  - rescue ArgumentError
    - datetime = false
  - if datetime
    %p.pull-right.muted{:style => "margin-top: 20px"}
      Last updated on
      = datetime
